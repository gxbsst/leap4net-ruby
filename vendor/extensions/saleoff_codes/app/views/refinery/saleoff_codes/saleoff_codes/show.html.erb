<% content_for :body_content_title do %>
  <%= @saleoff_code.code %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Begin At</h1>
    <p>
      <%=raw @saleoff_code.begin_at %>
    </p>
  </section>
  <section>
    <h1>End At</h1>
    <p>
      <%=raw @saleoff_code.end_at %>
    </p>
  </section>
  <section>
    <h1>Code</h1>
    <p>
      <%=raw @saleoff_code.code %>
    </p>
  </section>
  <section>
    <h1>Percent</h1>
    <p>
      <%=raw @saleoff_code.percent %>
    </p>
  </section>
  <section>
    <h1>User</h1>
    <p>
      <%=raw @saleoff_code.user_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="saleoff_codes">
      <% @saleoff_codes.each do |saleoff_code| %>
        <li>
          <%= link_to saleoff_code.code, refinery.saleoff_codes_saleoff_code_path(saleoff_code) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
